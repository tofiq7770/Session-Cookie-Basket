@using Fiorella.ViewModels.Baskets;


@model List<BasketVM>
@{
    ViewData["Title"] = "Index";
}
<div class="table-responsive mt-5">
    <table class="table table-bordered mt-3">
        <thead>
            <tr>
                <th> Image </th>
                <th> Name</th>
                <th> Description </th>
                <th> Price </th>
                <th> Category </th>
                <th> Operation </th>
            </tr>
        </thead>
        <tbody>
            @if(Model != null)
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <img src="~/img/@item.Image" style="height:100px;"/>
                        </td>
                        <td>
                            @item.Name
                        </td>

                        <td>
                            @item.Description
                        </td>

                        <td>
                            @item.Price
                            <button class="decrease" data-id="@item.Id" style="border:none">-</button> 
                            <span class="count">0</span>  
                            <button class="increase" data-id="@item.Id" style="border:none">+</button>
                        </td>

                        <td>
                            @item.Category
                        </td>

                        <td>
                            <form class="forms-sample d-inline" method="post" asp-action="Delete" asp-route-id="@item.Id">
                                <button type="submit" class="btn btn-danger text-white">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            }
            else
            {
                <h1>Not found</h1>
            }
           
        </tbody>
    </table>
</div>

@section js {
    <script src="~/js/cart.js"></script>
}